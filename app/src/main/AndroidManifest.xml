<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pc.lifeassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.AddDateActivity" />
        <activity android:name=".ui.AddCapitalActivity" />
        <activity android:name=".ui.AddCapitalRemakesDialog" />
        <activity android:name=".ui.RemindOthersActivity" />
        <activity android:name=".ui.NoteActivity" />
        <activity android:name=".ui.MainActivity" />

    </application>

</manifest>